FROM bradrydzewski/base

WORKDIR /root
HOME /root
LOGNAME root
USER root
ADD rbenv.sh /etc/drone.d/

# we already install ruby 2.1.2 in the base image
# so we'll comment this out for now
RUN export PATH=$PATH:/home/ubuntu/.rbenv/bin                                         && \
    cd ~/.rbenv/plugins/ruby-build                                                    && \
    git pull                                                                          && \
    export RBENV_VERSION=2.1.2                                                        && \
    eval "$(rbenv init -)"                                                            && \
    CC=gcc rbenv install 2.1.2                                                        && \
    rbenv rehash                                                                      && \
    rbenv global 2.1.2                                                                && \
    rbenv rehash                                                                      && \
    gem install bundler                                                               && \
    rbenv rehash                                                                      && \
    ln -s /home/ubuntu/.rbenv /root
